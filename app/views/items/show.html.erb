<%= raw(get_style(@item)) %>
</head>
  <body class="text-center bgcover">
    <p id="notice"><%= notice %></p>
    <main role="main" class="cover-container d-flex h-100 p-3 m-auto flex-column" >
      <div class="cover-container inner cover center">
        <div class="card bgmed" style="width: 80%; padding-bottom: 4rem;">
          <h3 class="card-title pf pc mt-5 mb-3" align="center">
            <%= @item.title %> <smaller>by </smaller>
          </h3>
          <h1 class="sc"><%= User.find(@item.user_id).username %></h1>
          <div class="card-body">
            <h1 class="sf sc card-subtitle mt-5"><%= @item.heading %></h1>
          </div>
          <div class="af pc card-text mx-5 my-5"><%= raw(@item.body) %></div>
        </div>
      </div>
    </main>
<% if user_signed_in? %>
<div class="fixed-bottom bgmed center" style="width: 100%; padding-top: 1rem; padding-bottom: 0;">
  <% copyrt = "&copy;" %>
  <p style="text-align: center;">
    <%= link_to 'Show Items', items_path , :class=>"btn bgdark btn-sm btn-outline-success"%>
    <%= link_to 'Edit Item', edit_item_path(@item) , :class=>"btn bgdark btn-sm btn-outline-warning"%>
    <%= link_to 'New Photo', new_photo_path , :class=>"btn bgdark btn-sm btn-outline-info"%>
    <%= link_to 'New Style', new_admin_style_path , :class=>"btn bgdark btn-sm btn-outline-info"%>
    <%= link_to 'New Item', new_item_path , :class=>"btn bgdark btn-sm btn-outline-info"%>
    <%= link_to raw(copyrt) +"2018 "+ENV['SITE_TITLE'], "/" , :class=>"btn bgdark btn-sm btn-outline-success"%></p>
</div>
<% end %>




