<body>
  <main><div class="row"><div class="col-sm-5 m-auto">
<%= bootstrap_form_with(model: message, local: true) do |f| %>
  <%= f.text_field :username, placeholder: "Jane Doe" %><br>
  <%= f.email_field :email, placeholder: "youremail@example.com" %><br>
  <%= f.text_field :subject, placeholder: "Subject" %><br>
